{
    // does not render single space between words
    "editor.renderWhitespace": "boundary",
    // vertical rule after 80 charachter
    // turns off validations that VSCode
    "javascript.validate.enable": false,
    // tab = 2 spaces
    "editor.tabSize": 2,
    // allow prettier to fix eslint 
    // "eslint.autoFixOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "workbench.colorCustomizations": {
      "activityBar.background": "#3a5068",
      "activityBar.activeBorder": "#29171f",
      "activityBar.foreground": "#e7e7e7",
      "activityBar.inactiveForeground": "#e7e7e799",
      "activityBarBadge.background": "#29171f",
      "activityBarBadge.foreground": "#e7e7e7",
      "titleBar.activeBackground": "#283747",
      "titleBar.inactiveBackground": "#28374799",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveForeground": "#e7e7e799",
      "statusBar.background": "#283747",
      "statusBarItem.hoverBackground": "#3a5068",
      "statusBar.foreground": "#e7e7e7"
    },
    "peacock.color": "#283747"
  }